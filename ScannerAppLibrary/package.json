{
    "name": "scannerapplibrary",
    "version": "0.0.1",
    "devDependencies": {
        "@sapui5/ts-types": "1.71.x",
        "@ui5/cli": "2.2.6",
        "@sap/ui5-builder-webide-extension": "1.0.x",
        "bestzip": "2.1.4",
        "rimraf": "3.0.2"
    },
    "scripts": {
        "build": "npm run clean && ui5 build --include-task=generateManifestBundle generateCachebusterInfo && npm run flatten && npm run clean-after-flatten && cp ./xs-app.json dist  && npm run zip",
        "zip": "cd dist && npx bestzip ../ScannerAppLibrary-content.zip *",
        "flatten": "cp -r dist/resources/be/wl/ScannerAppLibrary/* dist && cp dist/resources/be/wl/ScannerAppLibrary/.library dist ",
        "clean": "npx rimraf ScannerAppLibrary-content.zip dist",
        "clean-after-flatten": "rm -rf dist/resources dist/test-resources"
    }
}