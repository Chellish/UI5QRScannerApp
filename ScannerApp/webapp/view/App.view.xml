<mvc:View controllerName="be.wl.ScannerApp.controller.App" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m"
    xmlns:x="be.wl.ScannerAppLibrary.controls">
	<Shell id="shell">
		<App id="app">
			<pages>
				<Page id="page" title="{i18n>title}">
					<content>
                    <Button text="Open Scanner in dialog" press=".onOpenScanner"></Button>
                    <Button text="Open Scanner in dialog2" press=".onOpenScanner2"></Button>
                    <x:QRScanner QRCodeScanned=".onQRCodeScanned" value="{ui>/QRCode}" /></content>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>
